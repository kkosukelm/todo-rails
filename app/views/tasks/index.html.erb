<h1>タスク一覧</h1>
<table>
  <thead>
    <tr>
      <th>タスク名</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td>
        <%= form_with url: edit_task_path(task), method: :get, local: true do |form| %>
            <%=  form.submit'編集' %>
            <% end %>
        </td>
        <td>
          <%= form_with model: task, method: :delete, local: true do |form| %>
            <%= form.submit '削除' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '追加', new_task_path %> 